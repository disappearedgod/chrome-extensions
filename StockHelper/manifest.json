{
	"manifest_version": 2,
	"name": "StockHelper",
	"version": "0.1",
	"description": "Display the stocks's real-time market information which you interested in",
	"permissions": [  
		"http://*/",    
		"http://*.google.com/",    
		"unlimitedStorage"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Market index",
		"default_popup": "popup.html"
	},
	"background": {
		"page": "background.html"
	}
}